<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_weight="1">

    <View
        android:id="@+id/viewSelectedBackground"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/current_day_background"
        android:visibility="gone" />

    <View
        android:id="@+id/viewTodayIndicator"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/today_indicator"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <View
            android:id="@+id/viewHasExpenses"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/expense_dot"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>
